<% include partials/header %>
         <h1>Add Article</h1>

         <form method="POST" action="/articles/add">
             <div class="form-group">
                 <label for="postTitle">Title</label>
                 <input type="text" class="form-control" name="title" id="postTitle" placeholder="Add Title">
             </div>
             <div class="form-group">
                 <label for="postAuthor">Author</label>
                 <input type="text" class="form-control" name="author" id="postAuthor" placeholder="Add Author">
             </div>
             <div class="form-group">
                 <label for="postContent">Content</label>
                 <textarea name="content" class="form-control" name="content" id="postContent" rows="10" placeholder="Add Content"></textarea>
             </div>

             <button type="submit" class="btn btn-primary">Submit</button>
         </form>
<% include partials/footer %>