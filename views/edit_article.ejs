<% include partials/header %>
<h1>Edit Article</h1>

<form method="POST" action="/articles/edit/<%= article.id %>">
    <div class="form-group">
        <label for="postTitle">Title</label>
        <input type="text" class="form-control" name="title" id="postTitle" value="<%= article.title %>">
    </div>
    <div class="form-group">
        <label for="postAuthor">Author</label>
        <input type="text" class="form-control" name="author" id="postAuthor" value="<%= article.author %>">
    </div>
    <div class="form-group">
        <label for="postContent">Content</label>
        <textarea name="content" class="form-control" name="content" id="postContent" rows="10" ><%= article.body %></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
<% include partials/footer %>